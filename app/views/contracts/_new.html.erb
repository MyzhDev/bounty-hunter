<div class="form-new-contract"  style="color: white!important">
  <%= simple_form_for [@hunter, Contract.new] do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :hunter_id, as: :hidden, input_html: { value: @hunter.id } %>
    <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>
    <%= f.submit "Request contract", class: "form-btn" %>
  <% end %>
</div>
