<div class="container">
  <h1>Available bounty hunters</h1>
  <div class="hunters">
    <% @hunters.each do |hunter| %>
      <div class="hunter">
          <%if hunter.photo.attached? %>
            <div class="hunter-img"><%= cl_image_tag hunter.photo.key, class: 'hunter-img'%></div>
          <% end %>
            <h2 class="hunter-nickname"><%= "#{hunter.name}"%></h2>
            <p class="hunter-description"><%= "#{hunter.catchphrase}" %></p>
            <p class="hunter-description"><%= "Book for: #{hunter.price}â‚¬"%> </p>
            <p class="hunter-description"><% hunter.specialities.each do |speciality|%>
              <%= "--#{speciality.name}--"%>
            <% end %>
            </p>
      <%= link_to "Book this hunter", hunter_path(hunter.id), class:'hunter-btn' %>
      </div>
    <% end %>


  </div>
  <%= link_to "Register a new hunter", new_hunter_path, class: "btn-adh"%>
</div>
